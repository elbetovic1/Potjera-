//---------------------------------------------------------------------------

#pragma hdrstop

#include "Game.h"

//---------------------------------------------------------------------------
#pragma package(smart_init)


void questions::create_questions(int n){


	for(int i = 0; i < n; i++){
		question_nos.push_back(i);
	}

	random_shuffle(question_nos.begin(), question_nos.end());

};

void game_start(questions q, _di_IXMLpitanjaType pitanja){


	_di_IXMLpitanjeType pitanje = pitanja->Get_pitanje(q.question_nos[q.counter]);

	Form2->Edit1->Text = pitanje->Get_pit();
	Form2->Button2->Caption = "A) " + pitanje->Get_odg1();
	Form2->Button3->Caption = "B) " + pitanje->Get_odg2();
	Form2->Button4->Caption = "C) " + pitanje->Get_odg3();




};



